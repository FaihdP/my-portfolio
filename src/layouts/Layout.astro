---
import { Colors } from '../constants';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Web portfolio about the fullstack developer Faihd Pineda" />
		<meta name="viewport" content="width=device-width" />
		<meta name="autor" content="FaihdP" />
		<meta name="robots" content="all"/>
		<meta name="keywords" content="portfolio, portafolio, FaihdP, fullstack, full-stack, developer, dev, front-end, back-end, web developer, full stack, desarrollo de software, programming, diseño web, back-end, front-end, tecnologías web, web projects, portfolio, HTML, CSS, JavaScript, Node.js, React, MongoDB, MySQL, Express, Git, agile development, responsive design, UX/UI, desarrollo de aplicaciones web, interface design, clean code, habilidades técnicas, development experience, showcase de proyectos" />
		<link rel="icon" type="image/webp" href="/my-portfolio/images/favicon.webp" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen">
		<slot />
	</body>
</html>
<style define:vars={{ OFF_WHITE: Colors.OFF_WHITE }}>
	body {
		font-family: system-ui, sans-serif;
		background: var(--OFF_WHITE);
		width: 100vw;
		height: 100vh;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		overflow: hidden;
	}
</style>
