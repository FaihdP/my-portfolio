---
import { Colors } from "../constants";
import { Image } from "astro:assets";
import fCursiveImage from "../images/f-cursive.svg"
import HamburgerButton from "./react/HamburgerButton/Index";
---

<header class="Header flex flex-row">
  <a class="Header-logo" href="#">
    <span>
      <Image src={ fCursiveImage } alt="logo">
    </span>
  </a>
  <HamburgerButton client:load/>
</header>

<style define:vars={{ DARK_GRAY: Colors.DARK_GRAY, OFF_WHITE: Colors.OFF_WHITE }}>
  .Header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 20;
    width: 100%;
    color: var(--DARK_GRAY);
  }

  .Header-logo {
    position: absolute;
    top: 40px;
    left: 50px;
    width: 40px;
    animation: up-move 5s ease infinite;
  }

  /* @keyframes up-move {
    0%, 50% {
