---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import MainSection from "../components/MainSection.astro"
import AboutSection from "../components/AboutSection.astro"
import ProjectsSection from "../components/ProjectsSection.astro"
import { Colors } from "../constants";
---

<Layout title="Welcome - FaihdP web portfolio">
	<Header />
	<div class="Fullscreen">
		<aside>
			<AboutSection />
			<ProjectsSection />
		</aside>
		<MainSection />
	</div>
</Layout>

<style is:global define:vars={{ RED: Colors.RED }}>
	.Fullscreen {
		position: relative;
		width: 100vw;
		height: 100vh;
	}

	.HomeSection {
		position: absolute;
		z-index: 5;
		padding: 30px;
	}

	.SecondSection {
		width: 33.3%;
		height: 50%;
    transition: all 150ms ease-out;
		justify-content: center;
    align-items: center;
		text-align: center;
	}

	.SecondSection:hover {
    width: 35%;
    height: 52%;
    z-index: 10;
    box-shadow: 5px 5px 50px 5px rgba(0, 0, 0, 0.4);
  }

	.HomeSection-image {
		position: relative;
    width: 250px;
    height: 250px;
    background-color: rgb(0, 0, 0, 0.1);
    border-radius: 50%;
  }

</style>